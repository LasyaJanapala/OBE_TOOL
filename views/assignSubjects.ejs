<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Assign Subjects to Faculty</title>
    <style>
        .subject-box {
            border: 1px solid #ccc;
            padding: 10px;
            margin: 5px;
            display: inline-block;
        }
    </style>
</head>

<body>
    <h1>Assign Subjects to Faculty</h1>

    <form action="/assign-subjects/submit" method="POST">
        <input type="hidden" name="batch_id" value="<%= batch_id %>">
        <input type="hidden" name="sem_number" value="<%= sem_number %>">
        <input type="hidden" name="dept_id" value="<%= dept_id %>">

        <% subjects.forEach(subject=> { %>
            <div class="subject-box">
                <p><strong>
                        <%= subject.course_name %>
                    </strong></p>
                <input type="hidden" name="subject_ids[]" value="<%= subject.course_id %>">
                <label for="faculty_<%= subject.course_id %>">Assign Faculty:</label>
                <select name="faculty_ids[]" id="faculty_<%= subject.course_id %>">
                    <% faculty.forEach(fac=> { %>
                        <option value="<%= fac.faculty_id %>">
                            <%= fac.faculty_name %>
                        </option>
                        <% }) %>
                </select>
            </div>
            <% }) %>

                <button type="submit">Save Mapping</button>
    </form>
</body>

</html>