<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Map Subjects</title>
</head>

<body>
    <h1>Map Subjects to Batch</h1>

    <form action="/map-subjects/submit" method="POST">
        <input type="hidden" name="batch_id" value="<%= batch_id %>" />
        <input type="hidden" name="sem_number" value="<%= sem_number %>" />
        <input type="hidden" name="dept_id" value="<%= dept_id %>" />

        <!-- Displaying Courses -->
        <h2>Select Subjects</h2>
        <% if (courses && courses.length> 0) { %>
            <% courses.forEach(course=> { %>
                <div>
                    <input type="checkbox" name="selectedSubjects" value="<%= course.course_id %>" />
                    <label for="course_<%= course.course_id %>">
                        <%= course.course_name %>
                    </label>
                </div>
                <% }) %>
                    <% } else { %>
                        <p>No courses available to display.</p>
                        <% } %>

                            <button type="submit">Submit</button>
    </form>
</body>

</html>